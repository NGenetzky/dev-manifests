<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <default remote="ngenetzky_gh" revision="master"/>

  <!--
   remote: List all repository hosts.
   -->
  <remote name="ngenetzky_gh"
    fetch="git://github.com/ngenetzky"
    pushurl="ssh://git@github.com/ngenetzky"
  />

  <!--
   project: List all the repositories you want to fetch.
       "name": git repository's name on hosting server
       "remote": the remote host from above (if not the default)
       "revision": commitish to checkout (if not the default)
       "path": directory where git repository gets cloned/synced
   -->

   <project path="project/dotfiles" remote="ngenetzky_gh" name="dotfiles"/>
   <project path="project/iac" remote="ngenetzky_gh" name="iac"/>
   <project path="project/shlib" remote="ngenetzky_gh" name="shlib"/>

   <!-- <project path="project/dev-shell" remote="ngenetzky_gh" name="dev-shell"/> -->
   <!-- <project path="project/etckeeper-base-etc" remote="ngenetzky_gh" name="etckeeper-base-etc"/> -->
   <!-- <project path="project/etckeeper-base-home-config" remote="ngenetzky_gh" name="etckeeper-base-home-config"/> -->

</manifest>

